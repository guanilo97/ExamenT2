


@{var pokemons = ((List<Pokemons>)ViewBag.Pokemon); }


<h1>Pokemones</h1>
<a href="/pokemon/create">Crear pokemon</a>
<ul class="navbar-nav ml-md-auto">
    <li class="nav-item">
        <a href="/auth/login" class="nav-link text-dark">Login</a>
    </li>
</ul>
<table class="table">

    <thead>
        <tr>

            <th>Imagen</th>
            <th>Tipo</th>
            <th>Nombre</th>
        </tr>
    </thead>
    <tbody>

        @for (var i = 0; i < pokemons.Count; i++)
        {
            var item = pokemons[i];
            <tr>
                <td>
                    <img src="@item.Imagen" width="100" alt="Alternate text" />
                </td>
                <td>@item.tipo.Nombre</td>
                <td>@item.Nombre</td>
            </tr>
        }
    </tbody>
</table>



